<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ReadActivity"
    android:id="@+id/drawer">




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bubbles"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="end|bottom"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="60dp"
            android:elevation="6dp"
            app:borderWidth="0dp"
            app:backgroundTint="#429321"
            android:src="@drawable/speaker3x"
            app:fabCustomSize="64dp"
            />

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:fitsSystemWindows="true"
                >

                <com.example.android.play_api.CollapsingImageLayout
                    android:layout_width="match_parent"
                    android:layout_height="380dp"
                    android:minHeight="116dp"
                    android:fitsSystemWindows="true"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    app:titleEnabled="false">

                    <ImageView
                        android:id="@+id/background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/prayer" />

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/tool"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:theme="@style/ThemeOverlay.AppCompat.Light"/>

                    <FrameLayout
                        android:id="@+id/main_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:orientation="vertical"
                        android:paddingBottom="28dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/movable">

                            <TextView
                                android:id="@+id/date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Fri. 28 May 2019"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#fff"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Let God Take The Lead"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#fff"
                                android:textSize="21sp" />

                        </LinearLayout>

                            <LinearLayout
                                android:id="@+id/temporary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="bottom">

                                <TextView
                                    android:id="@+id/verse_desc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:text="Instead, live like the Lord Jesus Christ
did, and forget about satisfying the
desires of yourâ€¦"
                                    android:textColor="#fff"
                                    android:textSize="12sp" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="14dp">

                                    <TextView
                                        android:id="@+id/verse"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:background="@drawable/ovals"
                                        android:fontFamily="@font/poppins_medium"
                                        android:paddingLeft="18dp"
                                        android:layout_marginRight="4dp"
                                        android:paddingTop="3dp"
                                        android:paddingRight="18dp"
                                        android:paddingBottom="3dp"
                                        android:text="Romans 13:14"
                                        android:textColor="#29436a"
                                        android:textSize="13sp" />

                                    <LinearLayout
                                        android:id="@+id/listner"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:soundEffectsEnabled="false"
                                        android:gravity="center_horizontal">

                                        <ImageView
                                            android:layout_width="35dp"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/speaker3x"

                                            />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="7dp"
                                            android:fontFamily="@font/poppins_medium"
                                            android:gravity="center"
                                            android:text="Listen"
                                            android:textColor="#ffffff"
                                            android:textSize="16dp" />

                                    </LinearLayout>
                                </RelativeLayout>

                            </LinearLayout>


                    </FrameLayout>






                </com.example.android.play_api.CollapsingImageLayout>


            </android.support.design.widget.AppBarLayout>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffe5e5e5"
                android:id="@+id/scroller"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height = "wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:layout_marginBottom="100dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="47dp"
                        android:paddingLeft="47dp"
                        android:id="@+id/content"
                        android:textSize="16sp"
                        android:textColor="#595a5c"
                        android:fontFamily="@font/poppins_medium"
                        />


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_marginLeft="47dp"
                        android:layout_marginRight="47dp"
                        app:cardBackgroundColor="#29436a"
                        app:cardCornerRadius="13dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PRAYER"
                                android:layout_marginTop="21dp"
                                android:layout_marginBottom="21dp"
                                android:textColor="#ffffff"
                                android:textSize="16sp"
                                android:fontFamily="@font/poppins_semibold" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="#ffffff"
                                android:fontFamily="@font/poppins_medium"
                                android:textAlignment="center"
                                android:layout_marginRight="16dp"
                                android:layout_marginLeft="16dp"
                                android:paddingBottom="21dp"
                                android:id="@+id/prayertext"
                                android:text="Father In Jesusâ€™ Name, I Receive Help To Manage My Time Appropriately "
                                />
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </android.support.design.widget.CoordinatorLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="14dp"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:titleMarginStart="40dp" />

    </FrameLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="290dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffffff"
        app:itemTextColor="#595a5c"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/drawer_header"
        android:theme="@style/fonter"
        app:itemHorizontalPadding="44dp"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:layout_gravity="bottom"
                android:orientation = "horizontal"
                android:background="@drawable/gradient_green">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donate"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="25sp"
                    android:textColor="#ffffffff"
                    android:id="@+id/donate_btn"
                    android:layout_marginBottom="44dp"
                    android:layout_marginLeft="39dp"
                    android:layout_marginTop="30dp"
                    android:background="#00ffffff"
                    android:textAllCaps="false"
                    />


            </LinearLayout>

            <ImageView
                android:id="@+id/donate_img"
                android:layout_width="150dp"
                android:layout_height="158dp"
                android:src="@drawable/donate"
                android:layout_gravity="bottom"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="135dp"/>
        </FrameLayout>


    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>